services:
  mongodb:
    image: mongo:7.0
    container_name: dpp-mongodb
    restart: always
    ports:
      - "{{ dpp_mongodb_port }}:27017"
    environment:
      - MONGO_INITDB_DATABASE=dpp_db
    volumes:
      - {{ dpp_basedir }}/mongodb_data:/data/db
      - {{ dpp_basedir }}/mongodb_config:/data/configdb
    healthcheck:
      test: ["CMD", "mongosh", "--eval", "db.adminCommand('ping')"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 40s
    logging:
      driver: "json-file"
      options:
        max-file: "5"
        max-size: "15m"
  
  interfacer-dpp:
    image: ghcr.io/interfacerproject/interfacer-dpp:latest
    container_name: interfacer-dpp
    restart: always
    ports:
      - "{{ dpp_port }}:8080"
    environment:
      - MONGODB_URI=mongodb://mongodb:27017
    depends_on:
      mongodb:
        condition: service_healthy
    logging:
      driver: "json-file"
      options:
        max-file: "5"
        max-size: "15m"
